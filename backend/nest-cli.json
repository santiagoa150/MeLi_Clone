{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "compilerOptions": {
    "webpack": true,
    "deleteOutDir": true
  },
  "monorepo": true,
  "projects": {
    "gateway": {
      "type": "application",
      "root": "apps/gateway",
      "sourceRoot": "apps/gateway/src",
      "entryFile": "main",
      "compilerOptions": {
        "tsConfigPath": "apps/gateway/tsconfig.app.json",
        "assets": [
          {
            "watchAssets": true,
            "include": "**/.env.*",
            "outDir": "dist/apps/gateway"
          }
        ]
      }
    },
    "products": {
      "type": "application",
      "root": "apps/products",
      "sourceRoot": "apps/products/src",
      "entryFile": "main",
      "compilerOptions": {
        "tsConfigPath": "apps/products/tsconfig.app.json",
        "assets": [
          {
            "watchAssets": true,
            "include": "**/.env.*",
            "outDir": "dist/apps/products"
          },
          {
            "watchAssets": true,
            "include": "**/*.proto",
            "outDir": "dist/apps/products"
          }
        ]
      }
    },
    "shared": {
      "type": "library",
      "root": "libs/shared",
      "entryFile": "index",
      "sourceRoot": "libs/shared/src",
      "compilerOptions": {
        "tsConfigPath": "libs/shared/tsconfig.lib.json"
      }
    }
  }
}
